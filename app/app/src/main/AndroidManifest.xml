<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="org.zakariya.photodoodle"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:name=".PhotoDoodleApplication"
		android:allowBackup="true"
		android:largeHeap="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/PhotoDoodle">
		<activity
			android:name=".activities.MainActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop"
			android:theme="@style/PhotoDoodle.Home"/>

		<activity
			android:name=".activities.DoodleActivity"
			android:label="@string/app_name"
			android:launchMode="singleTop">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>
		</activity>

		<activity
			android:name=".activities.AboutActivity"
			android:label="@string/activity_title_about"
			android:launchMode="singleTop">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>

		<activity
			android:name=".activities.SyncSettingsActivity"
			android:label="@string/activity_title_sync"
			android:launchMode="singleTop">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>
		</activity>


		<activity
			android:name=".activities.ColorPickerTestActivity"
			android:label="ColorPickerView"
			android:launchMode="singleTop"
			android:parentActivityName=".activities.MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activities.MainActivity"/>

		</activity>



		<!-- use an alias in case we want to change the launch activity later without breaking
			 homescreen shortcuts.  Note must be defined after the targetActivity -->
		<activity-alias
			android:name=".Launcher"
			android:label="@string/app_name"
			android:targetActivity=".activities.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>


	</application>

</manifest>
