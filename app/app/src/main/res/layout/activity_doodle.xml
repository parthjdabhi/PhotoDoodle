<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/primary">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/primary_dark"
			android:minHeight="?attr/actionBarSize"
			android:theme="@style/ActionBarStyle"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:orientation="horizontal"
			android:layout_marginEnd="48dp"
		    android:layout_marginStart="60dp"
		    android:focusableInTouchMode="true"
			>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/titleEditTextLayout"
				android:layout_width="0dp"
				android:layout_weight="1"
				app:errorEnabled="false"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center_vertical"
				>

				<EditText
					android:id="@+id/titleEditText"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:maxLines="1"
				    android:lines="1"
				    android:ellipsize="end"
				    android:imeOptions="actionDone"
				    android:inputType="textCapWords|textNoSuggestions"
				    tools:text="Title Text"
				    android:theme="@style/AppBarEditText"
				    style="@style/TitleTextStyle"
					/>

				<!--<TextView-->
					<!--android:id="@+id/titleTextView"-->
					<!--android:layout_width="match_parent"-->
					<!--android:layout_height="wrap_content"-->
					<!--android:maxLines="1"-->
					<!--android:lines="1"-->
					<!--android:ellipsize="end"-->
					<!--android:text="Large Text"-->
					<!--style="@style/TitleTextStyle"-->
					<!--/>-->

			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TabLayout
				android:id="@+id/modeTabs"
				android:layout_width="wrap_content"
				android:layout_height="?attr/actionBarSize"
				app:layout_scrollFlags="scroll"
				app:tabIndicatorColor="@android:color/white"
				/>

		</LinearLayout>


	</FrameLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<org.zakariya.doodle.view.DoodleView
			android:id="@+id/doodleView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<ImageView
			android:id="@+id/doodlePlaceholderImageView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:transitionName="@string/transition_name_doodle_view"
			android:scaleType="centerCrop"/>

	</FrameLayout>

</LinearLayout>
