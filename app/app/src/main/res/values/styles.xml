<resources>

	<!-- Base application theme. -->
	<style name="PhotoDoodle" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="actionBarStyle">@style/ActionBarStyle</item>
		<item name="alertDialogTheme">@style/AlertDialogStyle</item>


		<!-- Set AppCompatâ€™s color theme attrs -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>

		<item name="android:windowBackground">@color/windowBackgroundColor</item>
		<item name="android:textColor">@color/textColor</item>
	</style>


	<style name="ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="android:titleTextStyle">@style/TitleTextStyle</item>

		<!-- Support library compatibility -->
		<item name="titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<style name="Display1" parent="TextAppearance.AppCompat.Display1">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Display2" parent="TextAppearance.AppCompat.Display2">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Display3" parent="TextAppearance.AppCompat.Display3">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Display4" parent="TextAppearance.AppCompat.Display4">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Body1" parent="TextAppearance.AppCompat.Body1">
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="Body2" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/textColor</item>
	</style>


	<!-- action bar title text -->
	<style name="TitleTextStyle"
	       parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionBarText</item>
	</style>

	<style name="PopupImageButtonStyle" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">@dimen/doodle_drawing_tool_icon_size</item>
		<item name="android:layout_height">@dimen/doodle_drawing_tool_icon_size</item>
		<item name="android:tint">@color/popup_item_tint</item>
	</style>

	<style name="PopupTextButtonStyle" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/popup_item_text_color</item>
	</style>

	<style name="EmptyDoodleGridText" parent="Base.TextAppearance.AppCompat.Large">
		<item name="android:textColor">@color/textColorLight</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">48dp</item>
	</style>

	<style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/primary</item>
		<item name="android:textColorPrimary">@color/textColor</item>
	</style>

</resources>
