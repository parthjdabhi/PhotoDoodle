<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="actionBarStyle">@style/ActionBarStyle</item>

		<!-- Set AppCompatâ€™s color theme attrs -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>

		<item name="android:windowBackground">@color/windowBackgroundColor</item>
	</style>


	<style name="ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
		<item name="android:titleTextStyle">@style/TitleTextStyle</item>

		<!-- Support library compatibility -->
		<item name="titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<!-- action bar title text -->
	<style name="TitleTextStyle"
	       parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionBarText</item>
	</style>

	<style name="DrawingToolButtonStyle" parent="Widget.AppCompat.ImageButton">
		<item name="android:layout_width">@dimen/doodle_drawing_tool_icon_size</item>
		<item name="android:layout_height">@dimen/doodle_drawing_tool_icon_size</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

</resources>
